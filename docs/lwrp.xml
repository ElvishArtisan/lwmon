  <refnamediv>
    <refname>lwrp</refname>
    <refpurpose>Command monitor for LiveWire Control Protocol (LWRP)</refpurpose>
  </refnamediv>
  <info>
    <author>
      <personname>
	<firstname>Fred</firstname>
	<surname>Gleason</surname>
